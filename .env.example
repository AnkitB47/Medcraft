# MedCraft Environment Variables

# API Gateway
API_PORT=8000
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Postgres
POSTGRES_USER=medcraft
POSTGRES_PASSWORD=medcraft
POSTGRES_DB=medcraft
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# MinIO (Local Object Store)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=localhost:9000

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000

# Airflow
AIRFLOW_EXECUTOR=CeleryExecutor
AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql+psycopg2://medcraft:medcraft@localhost:5432/airflow
AIRFLOW__CELERY__BROKER_URL=redis://localhost:6379/0
AIRFLOW__CELERY__RESULT_BACKEND=db+postgresql://medcraft:medcraft@localhost:5432/airflow

# Azure (Cloud)
AZURE_SUBSCRIPTION_ID=
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_RESOURCE_GROUP=medcraft-rg
AZURE_LOCATION=eastus
